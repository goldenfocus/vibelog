{
  "references": [],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Incremental strictness improvements
    // Start with safer defaults while maintaining compatibility
    "noImplicitAny": false, // Will enable incrementally via tsconfig.strict.json
    "noUnusedParameters": false, // Warns in ESLint instead
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false, // Warns in ESLint instead
    "strictNullChecks": false, // Will enable incrementally
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false, // Incrementally enabling via tsconfig.strict.json for new files
    // Improved type checking without breaking existing code
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // Can enable later for stricter array access
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test-setup.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "tests/**/*"
  ]
}
