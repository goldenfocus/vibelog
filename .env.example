# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI API (for transcription and content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API (for image generation with Gemini 2.5 Flash)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Email Service (EmailJS)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Analytics (PostHog)
# Sign up at https://posthog.com (free tier: 1M events/month)
# Get your project API key from: Settings > Project API Key
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Node Environment - DO NOT SET THIS MANUALLY
# Next.js automatically sets NODE_ENV (development/production)
# Setting it manually causes build errors with Html imports
# NODE_ENV=development  # NEVER SET THIS

# fal.ai API (for AI voice generation and video generation)
# Get your API key from: https://fal.ai/dashboard/keys
FAL_API_KEY=your_fal_api_key_here

# Stability AI (for image generation fallback)
STABILITY_API_KEY=your_stability_api_key_here

# Twitter Auto-Posting (Optional)
# Used for automatic posting of vibelogs to Twitter/X
# Get credentials from your Twitter/X account
TWITTER_SESSION_KEY=your_32_character_encryption_key_here
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# App Configuration
# Base URL for your application (used for generating links)
NEXT_PUBLIC_APP_URL=http://localhost:3000
